<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="12dp"
    android:minHeight="80dp"
    app:cardBackgroundColor="#4A4A4A"
    app:cardCornerRadius="12dp"
    app:cardElevation="2dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="16dp"
        android:paddingBottom="20dp"
        android:gravity="top">

        <TextView
            android:id="@+id/recommendation_icon"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:gravity="center"
            android:text="ðŸŽ¯"
            android:textSize="24sp"
            android:layout_marginEnd="16dp"
            android:layout_marginTop="4dp" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:paddingEnd="8dp">

            <TextView
                android:id="@+id/recommendation_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Meditasi 10 Menit"
                android:textColor="#FFFFFF"
                android:textSize="16sp"
                android:textStyle="bold"
                android:layout_marginBottom="6dp" />

            <TextView
                android:id="@+id/recommendation_description"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Tenangkan pikiran dengan meditasi singkat"
                android:textColor="#B0B0B0"
                android:textSize="14sp"
                android:lineSpacingExtra="3dp"
                android:singleLine="false"
                android:autoLink="none"
                android:linksClickable="false"
                android:minHeight="40dp" />

        </LinearLayout>


    </LinearLayout>

</androidx.cardview.widget.CardView>